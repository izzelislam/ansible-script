APP_NAME="{{ app_name | default('Laravel') }}"
APP_ENV={{ app_env | default('production') }}
APP_KEY={{ app_key | default('') }}
APP_DEBUG={{ app_debug | default('false') }}
APP_TIMEZONE={{ app_timezone | default('Asia/Jakarta') }}
APP_URL=https://{{ domain }}

LOG_CHANNEL={{ log_channel | default('stack') }}
LOG_LEVEL={{ log_level | default('warning') }}

DB_CONNECTION={{ db_connection | default('mysql') }}
DB_HOST={{ db_host | default('127.0.0.1') }}
DB_PORT={{ db_port | default('3306') }}
DB_DATABASE={{ db_name }}
DB_USERNAME={{ db_user }}
DB_PASSWORD={{ db_pass }}

SESSION_DRIVER={{ session_driver | default('database') }}
SESSION_LIFETIME={{ session_lifetime | default('120') }}

QUEUE_CONNECTION={{ queue_connection | default('sync') }}

CACHE_DRIVER={{ cache_driver | default('file') }}
CACHE_PREFIX={{ cache_prefix | default('laravel_cache') }}

FILESYSTEM_DISK={{ filesystem_disk | default('local') }}

MAIL_MAILER={{ mail_mailer | default('smtp') }}
MAIL_HOST={{ mail_host | default('mail.example.com') }}
MAIL_PORT={{ mail_port | default('587') }}
MAIL_USERNAME={{ mail_username | default('') }}
MAIL_PASSWORD={{ mail_password | default('') }}
MAIL_ENCRYPTION={{ mail_encryption | default('tls') }}
MAIL_FROM_ADDRESS="{{ mail_from_address | default('noreply@' + domain) }}"
MAIL_FROM_NAME="{{ mail_from_name | default(app_name | default('Laravel')) }}"

{% if redis_host is defined %}
REDIS_HOST={{ redis_host }}
REDIS_PASSWORD={{ redis_password | default('null') }}
REDIS_PORT={{ redis_port | default('6379') }}
{% endif %}

{% if broadcast_driver is defined %}
BROADCAST_DRIVER={{ broadcast_driver }}
{% endif %}

{% if pusher_app_id is defined %}
PUSHER_APP_ID={{ pusher_app_id }}
PUSHER_APP_KEY={{ pusher_app_key }}
PUSHER_APP_SECRET={{ pusher_app_secret }}
PUSHER_APP_CLUSTER={{ pusher_app_cluster | default('ap1') }}
{% endif %}

{% if extra_env_vars is defined %}
{% for key, value in extra_env_vars.items() %}
{{ key }}={{ value }}
{% endfor %}
{% endif %}
